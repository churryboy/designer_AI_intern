{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true,
    "paths": {
      "@designer-ai/shared": ["./shared/src"],
      "@designer-ai/shared/*": ["./shared/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "out"]
}
